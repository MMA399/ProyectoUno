@model IEnumerable<ProyectoUno.Models.Devolucion>

@{
    ViewBag.Title = "Devolucion";
}

<h2>Lista de Devolucion de herramientas</h2>

<p>
    @Html.ActionLink("Devolver", "CreateDevolucion", new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cedula)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Devolucion1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cantidad)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Cedula)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Codigo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Devolucion1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cantidad)
        </td>
        <td>
            @Html.ActionLink("Editar", "EditDevolucion", new { id=item.Cedula}, new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Detalles", "DetailsDevolucion", new { id = item.Cedula }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Eliminar", "DeleteDevolucion", new { id = item.Cedula }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
